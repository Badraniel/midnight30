#:kivy 1.11.1

<Tile>:
    # Estas propriedades serão usadas para animação
    bg_alpha: 1.0  # Alpha inicial do fundo, agora totalmente opaco
    border_alpha: 1.0  # Alpha inicial da borda, agora totalmente opaco

    canvas:
        # Retângulo de fundo
        Color:
            rgba: self.bg_color[0], self.bg_color[1], self.bg_color[2], self.bg_alpha
        Rectangle:
            pos: self.pos
            size: self.size

        # Linha da borda
        Color:
            rgba: self.border_color[0], self.border_color[1], self.border_color[2], self.border_alpha
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1

