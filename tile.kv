#:kivy 1.11.1

<Tile>:
    # Estas propriedades serão usadas para animação
    bg_alpha: 0.1  # Alpha inicial do fundo
    border_alpha: 0.1  # Alpha inicial da borda

    canvas.before:
        # Retângulo de fundo
        Color:
            rgba: root.bg_color[0], root.bg_color[1], root.bg_color[2], root.bg_alpha
        Rectangle:
            pos: root.pos
            size: root.size

        # Linha da borda
        Color:
            rgba: root.border_color[0], root.border_color[1], root.border_color[2], root.border_alpha
        Line:
            rectangle: self.x, self.y, self.width, self.height
            width: 1

